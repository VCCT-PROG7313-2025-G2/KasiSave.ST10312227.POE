<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base app theme for night mode -->
    <style name="Theme.KasiSave" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary/accent color -->
        <item name="colorSecondary">@color/yellow_accent</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Backgrounds and surfaces -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="android:textColorPrimary">@color/colorOnSurface</item>

        <!-- Error color -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>

        <!-- Control element colors -->
        <item name="colorControlNormal">@color/light_gray</item>
        <item name="colorControlActivated">@color/green_primary</item>
        <item name="colorButtonNormal">@color/green_primary</item>

        <!-- Status bar and nav bar -->
        <item name="android:statusBarColor">@color/green_dark</item>
        <item name="android:navigationBarColor">@color/green_dark</item>

        <!-- Disable system force dark to fully control colors -->
        <item name="android:forceDarkAllowed">false</item>
    </style>
</resources>
