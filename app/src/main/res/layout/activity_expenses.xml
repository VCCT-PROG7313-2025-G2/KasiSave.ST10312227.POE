<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backround_colour"
    android:layout_marginTop="50dp">

    <!-- No expenses message -->
    <TextView
        android:id="@+id/noExpensesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="No expenses added yet"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        android:visibility="gone" />

    <!-- RecyclerView for listing expenses -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/expensesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnSearchByCategory"
        android:layout_below="@id/noExpensesTextView"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="60dp" />

    <Button
        android:id="@+id/btnSearchByDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Expenses By Date"
        android:layout_above="@id/btnSearchByCategory"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/btnSearchByCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomNavigationView"
        android:layout_margin="16dp"
        android:text="Search Expenses By Category" />

    <!-- Total expenses summary -->
    <TextView
        android:id="@+id/totalExpensesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnSearchByDate"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:text="Total: R 0.00"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- FloatingActionButton to add new expense -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addExpenseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnSearchByCategory"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:contentDescription="Add Expense"
        android:src="@android:drawable/ic_input_add"
        app:tint="@android:color/white" />

    <!-- Bottom navigation menu -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>
