<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background"
    android:padding="16dp">

    <!-- App Title -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="KASI SAVE"
        android:textColor="@color/green_primary"
        android:textSize="40sp"
        android:layout_marginTop="16dp"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="4" />

    <!-- Expenses Title -->
    <TextView
        android:id="@+id/incomeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expenses"
        android:textColor="@color/dark_gray"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/textView2"
        android:layout_marginTop="8dp" />

    <!-- Total Expenses -->
    <TextView
        android:id="@+id/totalExpensesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: R 0.00"
        android:textColor="@color/dark_gray"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/incomeTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <!-- No Expenses Message -->
    <TextView
        android:id="@+id/noExpensesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="No expenses added yet"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_below="@id/totalExpensesTextView"
        android:layout_marginTop="8dp" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/expensesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/noExpensesTextView"
        android:layout_above="@id/btnSearchByDate"
        android:clipToPadding="false"
        android:padding="8dp" />

    <!-- Search Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSearchByDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Expenses"
        android:textSize="16sp"
        android:textColor="@color/colorOnPrimary"
        app:cornerRadius="16dp"
        app:backgroundTint="@color/green_primary"
        android:layout_alignParentBottom="true"
        android:layout_above="@id/bottomNavigationView"
        android:layout_marginBottom="60dp" />

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addExpenseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:layout_above="@id/bottomNavigationView"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Add Expense"
        app:backgroundTint="@color/green_primary"
        app:tint="@android:color/white" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/light_background"
        app:itemIconTint="@color/green_primary"
        app:itemTextColor="@color/green_primary"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>
