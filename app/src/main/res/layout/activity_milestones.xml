<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backround_colour"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextGoalName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Goal Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextTargetAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Target Amount"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editTextDeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Deadline (e.g., 30 June 2025)"
        android:inputType="text" />

    <EditText
        android:id="@+id/minSpendText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Min Monthly Spend: R0.00"
        android:inputType="text"/>

    <EditText
        android:id="@+id/maxSpendText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Max Monthly Spend: R0.00"
        android:inputType="text"/>

    <Button
        android:id="@+id/buttonAddMilestone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Add Milestone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="12dp"
        android:background="#CCCCCC" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/milestoneRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>
