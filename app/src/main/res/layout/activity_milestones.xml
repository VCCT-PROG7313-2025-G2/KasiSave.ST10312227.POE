<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backround_colour"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- KASI SAVE Title (Centered) -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="KASI SAVE"
        android:textColor="#4CAF73"
        android:textSize="50sp"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="8"
        android:layout_marginTop="32dp" />

    <!-- Spacer to create a gap below the app name -->
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <!-- Goal Title (Centered) -->
    <TextView
        android:id="@+id/incomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goal"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <!-- Goal Name EditText -->
    <EditText
        android:id="@+id/editTextGoalName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Goal Name"
        android:inputType="textPersonName" />

    <!-- Target Amount EditText -->
    <EditText
        android:id="@+id/editTextTargetAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Target Amount"
        android:inputType="numberDecimal" />

    <!-- Deadline EditText -->
    <EditText
        android:id="@+id/editTextDeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Deadline (e.g., 30 June 2025)"
        android:inputType="text" />

    <!-- Min Spend EditText -->
    <EditText
        android:id="@+id/minSpendText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Min Monthly Spend: R0.00"
        android:inputType="text"/>

    <!-- Max Spend EditText -->
    <EditText
        android:id="@+id/maxSpendText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Max Monthly Spend: R0.00"
        android:inputType="text"/>

    <!-- Add Milestone Button -->
    <Button
        android:id="@+id/buttonAddMilestone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Add Milestone" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="12dp"
        android:background="#CCCCCC" />

    <!-- Milestone RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/milestoneRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>
