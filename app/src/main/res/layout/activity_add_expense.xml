<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="8dp">

        <!-- Date -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/dateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="YYYY-MM-DD"
            android:drawableEnd="@android:drawable/ic_menu_my_calendar"
            android:inputType="none"
            android:focusable="false"
            android:padding="16dp"
            android:fontFamily="sans-serif"
            android:background="@drawable/edittextadd_background"
            android:textColor="@color/white"
            android:textColorHint="@color/light_gray" />

        <!-- Start Time -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Time"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/startTimeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="HH:mm"
            android:drawableEnd="@android:drawable/ic_menu_recent_history"
            android:inputType="none"
            android:focusable="false"
            android:padding="16dp"
            android:fontFamily="sans-serif"
            android:background="@drawable/edittextadd_background"
            android:textColor="@color/white"
            android:textColorHint="@color/light_gray" />

        <!-- End Time -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Time"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/endTimeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="HH:mm"
            android:drawableEnd="@android:drawable/ic_menu_recent_history"
            android:inputType="none"
            android:focusable="false"
            android:padding="16dp"
            android:fontFamily="sans-serif"
            android:background="@drawable/edittextadd_background"
            android:textColor="@color/white"
            android:textColorHint="@color/light_gray" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/descriptionEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter description"
                android:inputType="text"
                android:padding="16dp"
                android:fontFamily="sans-serif"
                android:background="@drawable/edittextadd_background"
                android:textColor="@color/white"
                android:textColorHint="@color/light_gray" />

            <ImageButton
                android:id="@+id/btnMicDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_btn_speak_now"
                android:contentDescription="Voice input"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginStart="8dp"
                android:padding="12dp" />

            <ImageButton
                android:id="@+id/btnRecognizeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_camera"
                android:contentDescription="Scan text"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginStart="8dp"
                android:padding="12dp" />
        </LinearLayout>

        <!-- Amount -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/amountEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="0.00"
                android:inputType="numberDecimal"
                android:padding="16dp"
                android:fontFamily="sans-serif"
                android:background="@drawable/edittextadd_background"
                android:textColor="@color/white"
                android:textColorHint="@color/light_gray" />

            <ImageButton
                android:id="@+id/btnMicAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_btn_speak_now"
                android:contentDescription="Voice input"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginStart="8dp"
                android:padding="12dp" />
        </LinearLayout>

        <!-- Category -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"/>

        <!-- Category -->
        <Spinner
            android:id="@+id/categorySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/light_gray" />

        <!-- Attach Photo -->
        <Button
            android:id="@+id/attachPhotoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:text="Attach Photo"
            android:fontFamily="sans-serif"
            android:backgroundTint="@color/green_dark"
            android:textColor="@android:color/white"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp" />

        <!-- Photo Preview -->
        <ImageView
            android:id="@+id/expenseImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/light_gray"
            android:scaleType="centerCrop"
            android:contentDescription="Expense image"
            android:visibility="visible" />

        <!-- Recurring Expense -->
        <CheckBox
            android:id="@+id/recurringCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:text="Recurring Expense"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:buttonTint="@color/green_dark" />

        <!-- Lottie Animation -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/expenseAnimationView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            app:lottie_rawRes="@raw/money_out"
            app:lottie_autoPlay="false"
            app:lottie_loop="false" />

        <!-- Save Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="SAVE EXPENSE"
            android:textAllCaps="true"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:backgroundTint="@color/green_dark"
            android:textColor="@android:color/white"
            android:padding="16dp" />
    </LinearLayout>
</ScrollView>